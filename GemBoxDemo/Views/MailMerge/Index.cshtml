@model MailMergeModel

<h1>
    MailMerge Demo
</h1>

<form asp-controller="MailMerge" asp-action="Download" enctype="multipart/form-data">

    <div class="row">
        <div class=" col-md-4 form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>

        <div class=" col-md-4 form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
        </div>

        <div class=" col-md-4 form-group">
            <label asp-for="DocDateTime"></label>
            <input asp-for="DocDateTime" asp-format="{0:yyyy-MM-ddTHH:mm}" class="form-control" />
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4 form-group">
            <label asp-for="ImageFile"></label>
            <input class="form-control" asp-for="ImageFile">
        </div>

        <div class="col-md-4 form-group">
            <label asp-for="TemplateFile"></label>
            <input class="form-control" asp-for="TemplateFile">
        </div>

        <div class="col-md-4 form-group">
            <label class="d-block">Document Type</label>
            @foreach (var type in Enum.GetValues<MailMergeDocType>())
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="MailMergeDocType" id="@type.ToString()" value="@((int)type)" checked="@(type == Model.MailMergeDocType)">
                    <label class="form-check-label" for="@type.ToString()">@type.ToString()</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">
        Download
    </button>

</form>